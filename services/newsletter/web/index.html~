	<script language="JavaScript">
		$(document).ready(function(){
			$("#register_form").submit(function(){
				var email = $("#email").val();
				if(email === "") return;

				$.ajax({
					type: "POST",
					url: "register",
					data: {"email": email},
					success: function(data){
						$("#register").hide();
						$("#email").hide();
						$("#message").removeClass("alert-error");
						$("#message").addClass("alert-success");
						$("#message").html("Thanks for registering " + email + "!<br/><a href='index.html'>Register another e-mail address</a>");						
					},
					error: function(){
						$("#message").removeClass("alert-success");
						$("#message").addClass("alert-error");
						$("#message").html("Oops, an error occured. Please check if the entered e-mail address is correct and try again.");
					}
				});
				return false;
			});
		});
	</script>

